<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.devMode" value="false" />
	<package name="shop" extends="struts-default" namespace="/">
		<interceptors>
			<interceptor name="LoginIntercepter"
				class="com.codeagles.shop.intercepter.LoginIntercepter"></interceptor>
		</interceptors>
		<global-results>
			<result name="msg">/WEB-INF/jsp/msg.jsp</result>
			<result name="loginFail">/admin/index.jsp</result>
		</global-results>
		<!-- 配置首页访问的Action -->
		<action name="index" class="indexAction">
			<result name="index">/WEB-INF/jsp/index.jsp</result>
		</action>
		<action name="user_*" class="userAction" method="{1}">
			<result name="registPage">/WEB-INF/jsp/regist.jsp</result>
			<result name="loginPage">/WEB-INF/jsp/login.jsp</result>
			<result name="input">/WEB-INF/jsp/regist.jsp</result>
			<result name="loginsuccess" type="redirectAction">index</result>
			<result name="quit" type="redirectAction">index</result>
			<result name="login">/WEB-INF/jsp/login.jsp</result>
			<result name="checkcode">/WEB-INF/jsp/regist.jsp</result>
		</action>
		<action name="checkImgAction" class="checkImgAction"></action>
		<action name="product_*" class="productAction" method="{1}">
			<result name="findByPid">/WEB-INF/jsp/product.jsp</result>
			<result name="findByCid">/WEB-INF/jsp/productList.jsp</result>
			<result name="findByCsid">/WEB-INF/jsp/productList.jsp</result>
		</action>

		<!-- cartAction -->
		<action name="cart_*" class="cartAction" method="{1}">
			<result name="addCart">/WEB-INF/jsp/cart.jsp</result>
			<result name="clearCart">/WEB-INF/jsp/cart.jsp</result>
			<result name="removeCart">/WEB-INF/jsp/cart.jsp</result>
			<result name="myCart">/WEB-INF/jsp/cart.jsp</result>
		</action>
		<!-- 订单模块的Action -->
		<action name="order_*" class="orderAction" method="{1}">
			<result name="saveSuccess">/WEB-INF/jsp/order.jsp</result>
			<result name="login">/WEB-INF/jsp/login.jsp</result>
			<result name="findByUidSuccess">/WEB-INF/jsp/orderlist.jsp</result>
			<result name="findByOidSuccess">/WEB-INF/jsp/order.jsp</result>
			<result name="payOrder">/WEB-INF/jsp/pay.jsp</result>
			<result name="updateState" type="redirectAction">order_findByUid.action?page=1
			</result>
		</action>
		<action name="adminUser_*" method="{1}" class="adminUserAction">
			<result name="loginSuccess">/admin/home.jsp</result>
			<result name="loginFail">/admin/index.jsp</result>
		</action>
		<!-- 后台一级分类管理 -->
		<action name="adminCategory_*" class="adminCategoryAction"
			method="{1}">
			<result name="findAll">/admin/category/list.jsp</result>
			<result name="editSuccess">/admin/category/edit.jsp</result>
			<result name="saveSuccess" type="redirectAction">adminCategory_findAll.action
			</result>
			<result name="deleteSuccess" type="redirectAction">adminCategory_findAll.action
			</result>
			<result name="updateSuccess" type="redirectAction">adminCategory_findAll.action
			</result>

			<interceptor-ref name="LoginIntercepter" />
			<interceptor-ref name="defaultStack" />
		</action>
		<!-- 后台二级分类管理 -->
		<action name="adminCategorySecond_*" method="{1}"
			class="adminCategorySecondAction">
			<result name="findAll">/admin/categorysecond/list.jsp</result>
			<result name="addPage">/admin/categorysecond/add.jsp</result>
			<result name="addSuccess" type="redirectAction">adminCategorySecond_findAll.action
			</result>
			<result name="deleteSuccess" type="redirectAction">adminCategorySecond_findAll.action
			</result>
			<result name="updateSuccess" type="redirectAction">adminCategorySecond_findAll.action
			</result>
			<result name="editSuccess">/admin/categorysecond/edit.jsp</result>
			<interceptor-ref name="LoginIntercepter" />
			<interceptor-ref name="defaultStack" />
		</action>
		<!-- 后台商品Action -->
		<action name="adminProduct_*" class="adminProductAction"
			method="{1}">
			<result name="findAll">/admin/product/list.jsp</result>
			<result name="addPageSuccess">/admin/product/add.jsp</result>
			<result name="saveSuccess" type="redirectAction">adminProduct_findAll.action?page=1
			</result>
			<result name="deleteSuccess" type="redirectAction">adminProduct_findAll.action?page=1
			</result>
			<result name="updateSuccess" type="redirectAction">adminProduct_findAll.action?page=1
			</result>
			<result name="editSuccess">/admin/product/edit.jsp</result>
			<interceptor-ref name="LoginIntercepter" />
			<interceptor-ref name="defaultStack" />
		</action>
		<!-- 后台订单管理Action -->
		<action name="adminOrder_*" class="adminOrderAction" method="{1}">
			<result name="findAll">/admin/order/list.jsp</result>
			<result name="findOrderItem">/admin/order/orderItem.jsp</result>
			<result name="updateStates" type="redirectAction">adminOrder_findAll.action?page=1
			</result>
			<interceptor-ref name="LoginIntercepter" />
			<interceptor-ref name="defaultStack" />
		</action>
	</package>
</struts>
